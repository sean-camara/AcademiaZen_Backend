# Production environment for AcademiaZen Backend
# Copy this file to AcademiaZen_Backend/.env on the VPS before running docker compose

# Web Push VAPID keys (generate with: npm run generate-vapid)
VAPID_PUBLIC_KEY=REPLACE_ME
VAPID_PRIVATE_KEY=REPLACE_ME
VAPID_EMAIL=mailto:camara.sean13@gmail.com

# Server configuration
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=https://www.academiazen.app

# Optional: multiple allowed frontend origins (comma-separated)
# FRONTEND_URLS=https://www.academiazen.app

# Optional: allow vercel preview origins
# ALLOW_VERCEL_PREVIEW=false

# Optional: allow requests with no Origin header
# ALLOW_NULL_ORIGIN=false

# MongoDB Atlas connection
MONGODB_URI=REPLACE_ME

# Firebase Admin credentials (choose ONE method)
# Method A: Service account JSON (entire JSON string)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Method B: Individual fields
# FIREBASE_PROJECT_ID=REPLACE_ME
# FIREBASE_CLIENT_EMAIL=REPLACE_ME
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Optional: restrict admin-only endpoints
# ADMIN_EMAILS=admin1@example.com,admin2@example.com

# OpenRouter / DeepSeek AI (server-side)
OPENROUTER_API_KEY=REPLACE_ME
# Optional override
# AI_BASE_URL=https://openrouter.ai/api/v1
AI_MODEL=deepseek/deepseek-r1-0528:free
# Optional app metadata (recommended by OpenRouter)
# OPENROUTER_SITE_URL=https://academiazen.app
# OPENROUTER_APP_TITLE=AcademiaZen

# AI access mode
AI_ACCESS_MODE=free
# Optional: allow free AI explicitly (overrides AI_ACCESS_MODE)
# ALLOW_FREE_AI=true
# Limit prompt size to protect backend
# MAX_AI_PROMPT_CHARS=12000

# Cloudflare R2 (PDF storage)
R2_ENDPOINT=REPLACE_ME
R2_BUCKET=REPLACE_ME
R2_ACCESS_KEY_ID=REPLACE_ME
R2_SECRET_ACCESS_KEY=REPLACE_ME
# Optional public base URL if bucket is public
# R2_PUBLIC_BASE_URL=
# Signed URL TTL in seconds
# R2_SIGNED_URL_TTL=900
# Max upload size in bytes
# MAX_UPLOAD_BYTES=15728640
# Max PDF text characters stored per asset
# MAX_PDF_TEXT_CHARS=12000
